<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:statusBarColor">@color/PaleDough</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/PaleDough</item>

    </style>

    <style name="Theme.FoodManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FoodManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FoodManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>